<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="170dp"
    android:background="@drawable/back"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fb_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="left"
        android:paddingBottom="4dp"
        android:id="@+id/fb_name"
        android:layout_above="@+id/fb_mail"
        android:layout_alignLeft="@+id/fb_image"
        android:layout_alignStart="@+id/fb_image" />
    <TextView
        android:id="@+id/fb_age"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fb_name"
        android:layout_alignEnd="@+id/fb_mail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fb_mail"
        android:gravity="left"
        android:layout_marginBottom="8dp"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/fb_name"
        android:layout_alignStart="@+id/fb_name" />




</RelativeLayout>