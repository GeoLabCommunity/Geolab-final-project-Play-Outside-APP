<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fb_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true"
        app:border_width="2dp"
        app:border_color="@color/white"
        android:layout_alignParentLeft="true" />

    <RelativeLayout
        android:background="@color/white_transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/fb_image">

    <TextView
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:id="@+id/fb_name"
        android:layout_above="@+id/fb_mail"
        />
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/fb_age"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/fb_name"
            android:layout_toRightOf="@+id/fb_name"
 />



        <TextView
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fb_mail"
        android:gravity="left"
        android:layout_marginBottom="8dp"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
       />

    </RelativeLayout>




</RelativeLayout>