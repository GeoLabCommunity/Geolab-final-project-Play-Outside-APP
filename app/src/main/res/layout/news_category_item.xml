<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical"
    app:cardCornerRadius="0dp"
    card_view:cardPreventCornerOverlap="false"
    xmlns:card_view="http://schemas.android.com/tools">

    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        >



        <TextView
            android:layout_marginLeft="16dp"
            android:id="@+id/time_text_id"
            android:text="16:00"
            android:background="@drawable/_football"
            android:gravity="center"
            android:textColor="#fafafa"
            android:textSize="11sp"
            android:layout_gravity="center"
            android:layout_width="41dp"
            android:layout_height="41dp" />


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35">

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/title_text_id"
                android:text="title"
                android:textSize="14sp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="11sp"
                android:layout_marginBottom="6dp"
                android:id="@+id/description_text_id"
                android:text="description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"/>



            <TextView
                android:layout_marginBottom="6dp"
                android:textSize="11sp"
                android:id="@+id/place_text_id"
                android:text="place"
                android:textColor="@color/com_facebook_button_background_color_disabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/setting_id"
            android:layout_width="30dp"
            android:layout_height="match_parent">

            <ImageView

                android:src="@drawable/shape"
                android:gravity="center"
                android:layout_width="12dp"
                android:layout_height="match_parent" />


            <TextView
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:id="@+id/player_count_id"
                android:text="15"
                android:textSize="12dp"
                android:layout_width="16dp"
                android:layout_height="match_parent" />


        </LinearLayout>






    </LinearLayout>



</android.support.v7.widget.CardView>