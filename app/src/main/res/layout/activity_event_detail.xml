<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/share_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <ImageView
            android:layout_width="35dp"
            android:paddingRight="16dp"
            android:id="@+id/arrow"
            android:src="@drawable/arrow"
            android:layout_height="wrap_content" />
         <TextView
             android:textColor="@color/white"
             android:textSize="15dp"
             android:gravity="center"
             android:text="Event Detail"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             />
        <LinearLayout
            android:gravity="center"
            android:id="@+id/shareButton"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginRight="16dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:gravity="center"
                android:text="Share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        <ImageView
            android:src="@drawable/share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="16dp"
            />
        </LinearLayout>



    </android.support.v7.widget.Toolbar>


<LinearLayout
android:layout_below="@+id/detail_toolbar"
    android:id="@+id/below"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textStyle="italic"
                android:text="Category:"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
    <TextView
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:textSize="14dp"
        android:textColor="#ED5831"
        android:id="@+id/detail_title_text_id"
        android:text="title"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
        </LinearLayout>


        <LinearLayout

            android:id="@+id/detail_author_linear_id"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textStyle="italic"
                android:text="Author:"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/com_facebook_profile_picture_blank_portrait"
            android:id="@+id/detail_author_id"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_width="40dp"
            android:layout_height="match_parent" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="195dp">
        <include
            layout="@layout/location_fragment"/>

        </LinearLayout>

    <View
        android:background="#bbd9d9d9"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>
   
    <LinearLayout
        android:layout_marginLeft="13dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/loc"
            android:layout_width="16dp"
            android:layout_height="16dp" />
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:text="location"
            android:layout_marginLeft="13dp"
            android:id="@+id/detail_place_text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:background="#bbd9d9d9"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>


<LinearLayout
    android:layout_marginLeft="13dp"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    
    <ImageView
        android:src="@drawable/cal"
        android:layout_width="16dp"
        android:layout_height="16dp" />

    <TextView
        android:layout_marginLeft="13dp"
        android:textSize="12dp"
        android:id="@+id/detail_date_text_id"
        android:text="Wednesday 22th January"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
</LinearLayout>
    <View
        android:background="#bbd9d9d9"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>

    
    
<LinearLayout
    android:layout_marginLeft="13dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    
    <ImageView
        android:src="@drawable/time"
        android:layout_width="16dp"
        android:layout_height="16dp" />
   
    <TextView
        android:textSize="12dp"
        android:textColor="#ED5831"
        android:layout_marginLeft="13dp"
        android:id="@+id/detail_time_text_id"
        android:text="time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
    <View
        android:background="#bbd9d9d9"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>
    <LinearLayout
        android:layout_marginLeft="13dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:src="@drawable/dett"
            android:layout_width="16dp"
            android:layout_height="16dp" />
        <TextView
            android:isScrollContainer="true"
            android:textSize="12dp"
            android:layout_marginLeft="13dp"
            android:id="@+id/detail_description_text_id"
            android:text="description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <View
        android:background="#bbd9d9d9"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>
    
   



    <LinearLayout
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
    <ImageView
        android:layout_gravity="center_vertical"
        android:src="@drawable/shape"
        android:layout_width="16dp"
        android:layout_height="16dp" />

    <TextView

        android:layout_gravity="center"
        android:textSize="15dp"
        android:id="@+id/detail_player_count_text_id"
        android:textColor="@android:color/black"
        android:text="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        </LinearLayout>
        <include
            android:layout_marginLeft="13dp"
            layout="@layout/cyrcleimageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>




    <View
        android:background="#bbd9d9d9"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>
    <Button
        android:id="@+id/detail_join_game"
        android:textColor="#fff"
        android:background="#ED5831"
        android:text="JOIN GAME"
        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

</LinearLayout>



</LinearLayout>