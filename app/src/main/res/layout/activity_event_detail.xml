<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/AppTheme.PopupOverlay">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_below="@id/detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<LinearLayout
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="geolab.playoutside.view.EventDetailActivity">

    <LinearLayout

        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="48dp">
    <TextView
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:textSize="14dp"
        android:textColor="#ED5831"
        android:id="@+id/detail_title_text_id"
        android:text="title"
        android:layout_width="wrap_content"
        android:layout_height="48dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <include
            layout="@layout/location_fragment"/>

        </LinearLayout>

    <View
        android:background="#bbd9d9d9"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>
   
    <LinearLayout
        android:layout_marginLeft="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/loc"
            android:layout_width="10dp"
            android:layout_height="14dp" />
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
        android:id="@+id/detail_place_text_id"
        android:text="location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:textSize="12dp"/>
            <TextView
                android:textColor="@color/com_facebook_button_background_color_disabled"
                android:id="@+id/detail_place_text_via_map"
                android:text="sruli misamarti qucha adgili"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:background="#bbd9d9d9"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>


<LinearLayout
    android:layout_marginLeft="13dp"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="55dp">
    
    <ImageView
        android:src="@drawable/cal"
        android:layout_width="17dp"
        android:layout_height="16dp" />

    <TextView
        android:layout_marginLeft="13dp"
        android:textSize="12dp"
        android:id="@+id/detail_date_text_id"
        android:text="Wednesday 22th January"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
</LinearLayout>
    <View
        android:background="#bbd9d9d9"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>

    
    
<LinearLayout
    android:layout_marginLeft="13dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="55dp">
    
    <ImageView
        android:layout_marginLeft="3dp"
        android:src="@drawable/time"
        android:layout_width="13dp"
        android:layout_height="14dp" />
   
    <TextView
        android:textSize="12dp"
        android:textColor="#ED5831"
        android:layout_marginLeft="11dp"
        android:id="@+id/detail_time_text_id"
        android:text="time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
    <View
        android:background="#bbd9d9d9"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>
    <LinearLayout
        android:layout_marginLeft="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <ImageView
            android:src="@drawable/dett"
            android:layout_width="wrap_content"
            android:layout_height="16dp" />
        <TextView
            android:textSize="12dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/detail_description_text_id"
            android:text="description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <View
        android:background="#bbd9d9d9"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>
    
   

<RelativeLayout
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    
    <ImageView
        android:src="@drawable/people"
        android:layout_width="15dp"
        android:layout_height="16dp" />

    <TextView
        android:textSize="12dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/detail_player_count_text_id"
        android:text="playerCount count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    

    <HorizontalScrollView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/detail_player_count_text_id"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                app:border_width="1dp"
                app:border_color="@color/com_facebook_blue"
                android:id="@+id/detail_join_image"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/com_facebook_profile_picture_blank_square"
                android:layout_marginRight="13dp"
                 />
            <de.hdodenhof.circleimageview.CircleImageView
                app:border_width="1dp"
                app:border_color="@color/com_facebook_blue"
                android:id="@+id/detail_join_image1"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/com_facebook_profile_picture_blank_square"
                android:layout_marginRight="13dp"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                app:border_width="1dp"
                app:border_color="@color/com_facebook_blue"
                android:id="@+id/detail_join_image2"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/com_facebook_profile_picture_blank_square"
                android:layout_marginRight="13dp"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                app:border_width="1dp"
                app:border_color="@color/com_facebook_blue"
                android:id="@+id/detail_join_image3"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/com_facebook_profile_picture_blank_square"
                android:layout_marginRight="13dp"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                app:border_width="1dp"
                app:border_color="@color/com_facebook_blue"
                android:id="@+id/detail_join_image4"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/com_facebook_profile_picture_blank_square"
                android:layout_marginRight="13dp"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                app:border_width="1dp"
                app:border_color="@color/com_facebook_blue"
                android:id="@+id/detail_join_image5"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/com_facebook_profile_picture_blank_square"
                android:layout_marginRight="13dp"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                app:border_width="1dp"
                app:border_color="@color/com_facebook_blue"
                android:id="@+id/detail_join_image6"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/com_facebook_profile_picture_blank_square"
                android:layout_marginRight="13dp"
                />

        </LinearLayout>

    </HorizontalScrollView>
</RelativeLayout>

    <View
        android:background="#bbd9d9d9"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>


</LinearLayout>
    </ScrollView>




    <Button
        android:id="@+id/detail_join_game"
        android:layout_alignParentBottom="true"
        android:textColor="#fff"
        android:background="#ED5831"
        android:text="JOIN GAME"
        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="48dp" />
</RelativeLayout>