<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="170dp">

    <LinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/profile"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_gravity="fill_vertical"
        android:layout_marginRight="16dp"
        android:src="@drawable/profilexxx"
        android:layout_width="21dp"
        android:layout_height="21dp" />
    <TextView
        android:layout_gravity="center"
        android:text="My Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:id="@+id/myGame"
        android:paddingBottom="10dp"

        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginRight="16dp"
            android:src="@drawable/myevent"
            android:layout_width="21dp"
            android:layout_height="21dp" />
        <TextView
            android:layout_gravity="center"
            android:text="My Events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>
    <LinearLayout
        android:id="@+id/allplayers"
        android:layout_marginLeft="16dp"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginRight="16dp"
            android:src="@drawable/allplayers"
            android:layout_width="21dp"
            android:layout_height="21dp" />
        <TextView
            android:layout_gravity="center"
            android:text="All Players"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/logout"
        android:paddingBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginRight="16dp"
            android:src="@drawable/logoutxxx"
            android:layout_width="22dp"
            android:layout_height="21dp" />
        <TextView
            android:layout_gravity="center"
            android:text="Logout"
            android:textColor="@color/login_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#e4e4e4"/>
    <TextView
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:textStyle="italic"
        android:text="All Categories"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>